{
    "root": true,
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "plugins": ["vue"],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": "off",
        "semi": "off",
        "vue/jsx-uses-vars": 2,
        "no-unused-vars": "off", // 不能有声明后未被使用的变量或参数，用于js
        "vue/no-unused-vars": "off", // 不能有声明后未被使用的变量或参数，用于vue模版
        "no-console": 0
    }
}
